Index: mercurial-0.6b/doc/Makefile
===================================================================
--- /dev/null	1970-01-01 00:00:00.000000000 +0000
+++ mercurial-0.6b/doc/Makefile	2005-07-12 11:01:25.675480824 +0200
@@ -0,0 +1,22 @@
+
+SOURCES=$(wildcard *.[15].txt)
+MAN=$(SOURCES:%.txt=%)
+HTML=$(SOURCES:%.txt=%.html)
+
+all: man
+
+man: $(MAN)
+
+html: $(HTML)
+
+$(MAN): %: %.xml
+	xmlto man $*.xml
+
+%.xml: %.txt
+	asciidoc -d manpage -b docbook $*.txt
+
+$(HTML): %.html: %.txt
+	asciidoc -b html $*.txt
+
+clean:
+	$(RM) $(MAN) $(MAN:%=%.xml) $(HTML)
